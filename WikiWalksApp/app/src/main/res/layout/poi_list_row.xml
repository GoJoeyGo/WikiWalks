<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        android:id="@+id/poi_list_frag_button"
        style="@style/TextButtonTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/colour_indicator"
        android:drawableRight="@drawable/chevron"
        android:drawableStart="@drawable/colour_indicator"
        android:drawableEnd="@drawable/chevron"
        android:drawablePadding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>